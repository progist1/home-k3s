{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "kubernetes",
    "helm-values",
    "flux",
    "kustomize"
  ],
  "assignees": ["progist"],
  "reviewers": ["progist"],
  "kubernetes": {
    "managerFilePatterns": ["apps/**/deployment.yaml"]
  },
  "flux": {
    "managerFilePatterns": ["clusters/home/flux-system/**/*.yaml", "apps/**/*.yaml"]
  }
}
