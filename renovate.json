{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "kubernetes",
    "helm-values",
    "flux",
    "kustomize"
  ],
  "assignees": ["progist"],
  "reviewers": ["progist"],
  "kubernetes": {
    "managerFilePatterns": ["apps/**/*.yaml"]
  },
  "flux": {
    "managerFilePatterns": ["clusters/home/flux-system/**/*.yaml", "apps/**/*.yaml"]
  },
  "hostRules": [
    {
      "hostType": "helm",
      "matchHost": "pmint93.github.io",
      "registryUrls": ["https://pmint93.github.io/helm-charts"]
    }
  ]
}
