{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "kubernetes",
    "helm-values",
    "flux",
    "kustomize"
  ],
  "assignees": ["progist"],
  "reviewers": ["progist"],
  "kubernetes": {
    "managerFilePatterns": [
      "apps/**/*.yaml",
      "helm-repositories/**/*.yaml"
    ]
  },
  "flux": {
    "managerFilePatterns": ["clusters/home/flux-system/**/*.yaml", "apps/**/*.yaml"]
  },
  "hostRules": [
    {
      "hostType": "helm",
      "matchHost": "pmint93.github.io",
      "registryUrls": ["https://pmint93.github.io/helm-charts"]
    }
  ],
  "registryAliases": {
    "pmint93": "https://pmint93.github.io/helm-charts"
  },
  "packageRules": [
    {
      "matchDatasources": ["helm"],
      "matchPackageNames": ["metabase"],
      "groupName": "Metabase Helm Chart"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["metabase/metabase"],
      "groupName": "Metabase Docker Image"
    },
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor"],
      "automerge": true,
      "matchPackagePatterns": ["cert-manager", "traefik", "nfs-subdir-external-provisioner"]
    }
  ]
}
